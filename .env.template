# .env.template - Academic Training Environment Configuration Template
# Copy this file to .env and update the values for your setup

# ===========================================
# REQUIRED: Google Gemini API Configuration
# ===========================================

# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
POSTGRES_DB=academic_datamart
POSTGRES_USER=postgres
POSTGRES_PASSWORD=academic123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full database URL (auto-constructed)
DATABASE_URL=postgresql://postgres:academic123@postgres:5432/academic_datamart

# ===========================================
# Qdrant Vector Database Configuration
# ===========================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=qdrant123
QDRANT_URL=http://qdrant:6333

# ===========================================
# Training Configuration
# ===========================================
# Environment mode
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Data generation settings
TRAINING_BATCH_SIZE=100
TRAINING_TIMEOUT=3600

# ===========================================
# University Configuration
# ===========================================
UNIVERSITY_NAME=Universitas Indonesia Raya
UNIVERSITY_CODE=UIR
CURRENT_ACADEMIC_YEAR=2024/2025

# ===========================================
# Vanna AI Configuration
# ===========================================
VANNA_MODEL=gemini-1.5-flash
VANNA_TEMPERATURE=0.1
VANNA_MAX_TOKENS=2000

# Collection names for 5 specialized collections
MAHASISWA_COLLECTION=mahasiswa_collection
DOSEN_COLLECTION=dosen_collection
AKADEMIK_COLLECTION=akademik_collection
KEUANGAN_COLLECTION=keuangan_collection
INSTITUSI_COLLECTION=institusi_collection

# ===========================================
# Optional: PgAdmin Configuration
# ===========================================
PGADMIN_EMAIL=admin@university.ac.id
PGADMIN_PASSWORD=admin123

# ===========================================
# Data Generation Counts (Customizable)
# ===========================================
# Collection 1: Student data
STUDENT_PERFORMANCE_COUNT=500
STUDENT_ATTENDANCE_COUNT=800
STUDENT_FINANCE_COUNT=400

# Collection 2: Lecturer data
LECTURER_PROFILE_COUNT=150
LECTURER_TEACHING_COUNT=300
LECTURER_ACTIVITY_COUNT=150

# Collection 3: Academic data
COURSE_PERFORMANCE_COUNT=200
GRADE_DISTRIBUTION_COUNT=150
ACADEMIC_TRENDS_COUNT=100

# Collection 4: Financial data
REVENUE_SUMMARY_COUNT=50
PAYMENT_ANALYSIS_COUNT=50
FINANCIAL_KPI_COUNT=20

# Collection 5: Institutional data (calculated from actual data)
FACULTY_STATISTICS_UPDATE=true
UNIVERSITY_PERFORMANCE_PERIODS=2
ACCREDITATION_STATUS_GENERATE=true

# ===========================================
# Docker Configuration
# ===========================================
# Container names
POSTGRES_CONTAINER=academic_postgres
QDRANT_CONTAINER=academic_qdrant
TRAINER_CONTAINER=academic_trainer

# Network configuration
NETWORK_NAME=academic_network

# Volume configuration
POSTGRES_DATA_VOLUME=postgres_data
QDRANT_DATA_VOLUME=qdrant_data
LOGS_VOLUME=./logs

# ===========================================
# Advanced Settings (Optional)
# ===========================================
# Vector embedding dimensions
EMBEDDING_DIMENSION=768

# Collection settings
VECTOR_DISTANCE_METRIC=cosine
COLLECTION_REPLICATION_FACTOR=1

# Database connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5

# ===========================================
# Development/Testing Settings
# ===========================================
# Set to true to enable debug mode
ENABLE_DEBUG_LOGGING=true

# Set to true to keep containers running after training
KEEP_CONTAINERS_RUNNING=false

# Set to true to regenerate data even if tables exist
FORCE_REGENERATE_DATA=false

# Set to true to skip training if collections already exist
SKIP_EXISTING_COLLECTIONS=false